@{
    ViewBag.Title = "Agenda Telefônica";
}
@section header
{
        <!-- Header -->
<header id="header" class="alt text-center">
    <span class="circulo glyphicon glyphicon-earphone"></span>
    <h1>Agenda Telefônica</h1>
    <h2>Bem-vindo à agenda telefônica!</h2>
    <h3>Busque o contato delejado navegando pela lista abaixo, ou digitando palavras-chave no campo de busca.</h3>
</header>
}
    <div class="row col-lg-12 input">
    <br>
        <form action="">
        <div class="\31 2u\28xlarge\29"> Pesquise aqui: <input type="search" class="\31 2u\28xlarge\29" id="textBoxSearch" ng-model="search" /> </div>
        </form>
    </div>
<div ng-controller="ContatosController">
    <table class="table">
        <thead>
            <tr class="text-center "header"">
                <td width=3%><strong>ID</strong></td>
                <td width=30%><strong>Nome</strong></td>
                <td width=30%><strong>Telefone</strong></td>
                <td width=30%><strong>Lembrança</strong></td>
                <td width=7%></td>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="contato in contatos | filter:search  | orderBy:'Nome'" class="text-center">
                <td width=3%>{{contato.Id}}</td>
                <td width=30%>{{ contato.Nome }}</td>
                <td width=30%><a href="tel:{{contato.Telefone}}">{{contato.Telefone}}</a></td>
                <td width=30%>{{contato.Lembranca}}</td>
                <td width=7%><a href="">
                    @if (Request.IsAuthenticated)
                    {
                        <span class="glyphicon glyphicon-edit" ng-click="edit(contato.Id)" title="Editar contato"></span>
                        <span class="glyphicon glyphicon-remove-sign" ng-click="remove(contato)" title="Remover contato"></span>
                    }
                        <span class="glyphicon glyphicon-info-sign" ng-click="details(contato.Id)" title="Detalhar contato"></span>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
    
</div>