@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

    @Html.AntiForgeryToken()

    <div class="dropdown navbar-right">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
           Olá @System.Web.HttpContext.Current.User.Identity.Name
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a href="#">@Html.ActionLink("Alterar senha", "AlterarSenha", "Autenticacao")</a></li>
            @if (System.Web.HttpContext.Current.User.Identity.Name == "administrador"){
            <li><a href="#">@Html.ActionLink("Gerenciar Usuários", "gerenciarusuarios", "autenticacao")</a></li>
            }
            <li><a href="#">@Html.ActionLink("Logoff", "LogOff", "Autenticacao")</a></li>
        </ul>
    </div>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Login", "LogOn", "Autenticacao", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
